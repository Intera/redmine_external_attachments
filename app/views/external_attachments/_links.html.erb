<div class="external-attachments">
<div class="contextual">
  <%= link_to(l(:label_edit_external_attachments),
              "attachments_edit_path",
              :title => l(:label_edit_external_attachments),
              :class => 'icon-only icon-edit'
             ) if options[:editable] %>
</div>
<% for attachment in attachments %>
<p>
  <a href="<%= attachment.url %>"><%= attachment.url %></a>
  <%= " - #{attachment.description}" unless attachment.description.blank? %>
  <% if options[:deletable] %>
    <%= link_to l(:button_delete), "attachment_path",
                :data => {:confirm => l(:text_are_you_sure)},
                :method => :delete,
                :class => 'delete icon-only icon-del',
                :title => l(:button_delete) %>
  <% end %>
  <% if options[:author] %>
    <span class="author"><%= attachment.author %>, <%= format_time(attachment.created_on) %></span>
  <% end %>
  </p>
<% end %>
</div>
